<script>
let totalScore=0;

function setProgress(p){
 document.getElementById("progress").style.width=p+"%";
}

function nextStep(n,p){
 document.querySelectorAll('.step').forEach(s=>s.classList.remove('active'));
 document.getElementById("step"+n).classList.add('active');
 setProgress(p);
 window.scrollTo({top:0,behavior:'smooth'});
}

function score(prefix){
 let s=0;
 for(let i=1;i<=5;i++){
  if(document.querySelector(`input[name=${prefix}_${i}]:checked`)?.value==="1") s+=6;
 }
 return s;
}

function fail(el){
 Swal.fire("Belum Lulus","Pelajari kembali materi","warning")
 .then(()=>el.scrollIntoView({behavior:'smooth'}));
}

function checkInd1(){
 let n=score("i1");
 if(n>=20){
  totalScore+=n;
  Swal.fire("Lulus","Lanjut ke Indikator 2","success")
   .then(()=>nextStep(3,40));
 }else fail(materi1);
}
</script>

